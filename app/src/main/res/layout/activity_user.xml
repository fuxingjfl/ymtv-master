<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lemon95_main_bg"
    android:clipChildren="false"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px195"
    android:paddingRight="@dimen/px195">

    <LinearLayout
        android:id="@+id/lemon_movie_details_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px150"
            android:focusable="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lemon95_movie_title_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px63"
                    android:focusable="false"
                    android:text="@string/lemon95_user_msg"
                    android:textColor="@color/lemon_b3aeae"
                    android:textSize="@dimen/px39"
                    android:textStyle="bold" />

            </LinearLayout>


            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:focusable="false"
                android:fontFamily="sans-serif-light"
                android:format12Hour="hh:mm"
                android:format24Hour="HH:mm"
                android:paddingTop="@dimen/px63"
                android:textColor="@color/lemon_b3aeae"
                android:textSize="@dimen/px39"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px762"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/px306"
                android:layout_height="@dimen/px306"
                android:background="@drawable/lemon_user_img"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/lemon_user_img_id"
                    android:layout_width="@dimen/px252"
                    android:layout_height="@dimen/px252"
                    android:layout_gravity="center"
                    android:src="@drawable/lemon_def_user" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px24"
                android:layout_marginLeft="@dimen/px34"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lemon_user_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lemon_3df1ed"
                    android:text="昵称：张三"
                    android:textSize="@dimen/px39" />

                <TextView
                    android:id="@+id/lemon_user_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px24"
                    android:text="手机号：18500232054"
                    android:textColor="@color/lemon_3df1ed"
                    android:textSize="@dimen/px39" />

                <Button
                    android:id="@+id/lemon_but_user"
                    android:layout_width="@dimen/px360"
                    android:layout_height="@dimen/px90"
                    android:layout_marginTop="@dimen/px24"
                    android:textColor="#6d6d6d"
                    android:background="@drawable/btn_user_selector"
                    android:textSize="@dimen/px45"
                    android:text="切换账号"/>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/px195">

            <ImageView
                android:layout_width="@dimen/px246"
                android:layout_height="@dimen/px84"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/lemon_logo" />

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>